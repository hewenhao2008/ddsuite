START=60

DDSUITE_BIN="/bin/ddsuite"

start() {
	config_load ddsuite
  local GATEWAY=`route -e|grep default|awk '{print $2}'`
  if test x${GATEWAY} = x; then
    $DDSUITE_BIN wifi_sta > /tmp/ddsuite.log
  else
    $DDSUITE_BIN rsync > /tmp/ddsuite.log
  fi
}

stop() {
	config_load ddsuite
}
